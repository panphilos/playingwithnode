extends ./layout/index

block contenido
    main.container.mt-5   
        h1.text-center.mt-5 #{pagina}
        p
            .row
                blockquote.text-center Lee sobre nuestros clientes y sus experiencias
                include ./layout/bloque_testimonials

            .row
                .col-md-12 
                    h2.d-block.w-100.text-center Agrega un Testimonial
                    //amb JSON.stringify podem convertir un array en un string

                    if(errores)
                        each error in errores
                            .alert.col.alert-danger.text-center= error.mensaje

                .row.justify-content-center.col
                    .col-md-8
                        //Els formularis s'han d'enviar per POST.
                        form(action="/testimonials" method="POST")
                            .form-group
                                label(for="nombre") Nombre 
                                input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)
                            .form-group
                                label(for="correo") Email 
                                input#nombre(type="text", placeholder="Tu email", name="correo", class="form-control", value= correo)
                            .form-group
                                label(for="mensaje") Mensaje 
                                textarea#nombre(class="form-control", name="mensaje", placeholder="Tu Mensaje", rows= 3 value= mensaje)
                            
                            input.btn.btn-success.btn-block(type="submit")        


